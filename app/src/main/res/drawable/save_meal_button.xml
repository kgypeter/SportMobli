<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#14a7ff" /> <!-- Change to your preferred green color -->
            <corners android:radius="8dp" />
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4bae4f" /> <!-- Change to your preferred blue color -->
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>
